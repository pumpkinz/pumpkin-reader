<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PumpkinTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/pumpkin_primary</item>
        <item name="colorPrimaryDark">@color/pumpkin_primaryDark</item>
        <item name="colorAccent">@color/pumpkin_accent</item>
        <item name="title_color">@color/grey_1000b</item>
        <item name="dim_title_color">@color/grey_500</item>
        <item name="list_bg_color">@color/grey_1000w</item>
        <item name="card_style">@style/CardView</item>
    </style>

    <style name="DarkPumpkinTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="title_color">@color/grey_1000w</item>
        <item name="dim_title_color">@color/grey_500</item>
        <item name="list_bg_color">@color/background_dark</item>
        <item name="card_style">@style/CardView.Dark</item>
        <item name="colorControlHighlight">@color/grey_600</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="TabIndicator" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/grey_1000w</item>
    </style>

    <style name="ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
    </style>

</resources>
